{{- /* Convert [R,G,B] array to #RRGGBB hex string */ -}}
{{- define "rgbToHex" -}}
{{- $arr := . -}}
{{- printf "#%02X%02X%02X" (index $arr 0) (index $arr 1) (index $arr 2) -}}
{{- end }}

{{- /* Convert [R,G,B] array â†’ float array 0-1 (iTerm2 format) */ -}}
{{- define "rgbToFloat" -}}
{{- $arr := . -}}
[
  {{ printf "%.6f" (mul (index . 0) 1.0 | div 255.0) }},
  {{ printf "%.6f" (mul (index . 1) 1.0 | div 255.0) }},
  {{ printf "%.6f" (mul (index . 2) 1.0 | div 255.0) }}
]
{{- end }}